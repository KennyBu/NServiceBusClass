<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="MsmqTransportConfig" type="NServiceBus.Config.MsmqTransportConfig, NServiceBus.Core" />
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core" />
  </configSections>

  <MsmqTransportConfig
    InputQueue="publisher_input_queue_optimus"
    ErrorQueue="publisher_input_queue_error_grimlock"
    NumberOfWorkerThreads="1"
    MaxRetries="3"
  />

  <UnicastBusConfig>
    <MessageEndpointMappings>
      <add Messages="Messages2" Endpoint="publisher_input_queue_grimlock" />
    </MessageEndpointMappings>  
  </UnicastBusConfig>
</configuration>